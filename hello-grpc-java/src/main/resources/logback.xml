<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with standard format -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender with standard format and rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/${COMPONENT:-java}_${bySecond}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/${COMPONENT:-java}_%d{yyyyMMdd_HHmmss}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%level] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="${LOG_LEVEL:-INFO}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Reduce noise from gRPC internals -->
    <logger name="io.grpc.netty" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
</configuration>
